doctype html
link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
script(src='//code.jquery.com/jquery-1.11.1.min.js')
// ---- Include the above in your HEAD tag --------
html(lang='en' style={padding: "100px"})
    head
        // Standard Meta
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
        // Site Properties
        title Signup
        // Stylesheets
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css')
    body
        .container
            form#myForm.form-horizontal(role='form', method='POST', action='/signup')
                .row
                    .col-md-3
                    .col-md-6
                        h2 Signup
                        hr
                .row
                    .col-md-3.field-label-responsive
                        label(for='email') E-Mail Address
                    .col-md-6
                        .form-group
                            .input-group.mb-2.mr-sm-2.mb-sm-0
                                .input-group-addon(style='width: 2.6rem')
                                    i.fa.fa-at
                                input#email.form-control(type='text', name='email', placeholder='you@example.com', required='', autofocus='')
                    .col-md-3
                        .form-control-feedback
                            span.text-danger.align-middle
                                // Put e-mail validation error messages here
                .row
                    .col-md-3.field-label-responsive
                        label(for='password') Password
                    .col-md-6
                        .form-group.has-danger
                            .input-group.mb-2.mr-sm-2.mb-sm-0
                                .input-group-addon(style='width: 2.6rem')
                                    i.fa.fa-key
                                input#password.form-control(type='password', name='password', placeholder='Password', required='')
                    .col-md-3
                        .form-control-feedback
                            span.text-danger.align-middle#error
                                //i.fa.fa-close  Example Error Message
                .row
                    .col-md-3.field-label-responsive
                        label(for='password') Confirm Password
                    .col-md-6
                        .form-group
                            .input-group.mb-2.mr-sm-2.mb-sm-0
                                .input-group-addon(style='width: 2.6rem')
                                    i.fa.fa-repeat
                                input#password-confirm.form-control(type='password', name='password-confirmation', placeholder='Password', required='')
                .row
                    .col-md-3
                    .col-md-6
                        button.btn.btn-success(type="button" onclick="submit()")
                            i.fa.fa-user-plus
                            |  Register

        script.
            function submit() {
                console.log("yes");
                var form = document.getElementById("myForm");

                var password = document.getElementById("password").value;
                var confirm = document.getElementById("password-confirm").value;

                if (password !== confirm) {
                    var error = document.createElement("i");
                    error.setAttribute("class", "fa fa-close");
                    error.innerText = "Passwords must match";

                    var errorSpot = document.getElementById("error");

                    errorSpot.appendChild(error);
                }

                return false;
                // else {
                //     form.submit();
                // }

            }
